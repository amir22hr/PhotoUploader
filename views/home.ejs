<!DOCTYPE html>
<html>

<head>
    <%- include('layout/head.ejs') %>
</head>

<body>

    <section class="hero is-info is-fullheight">
        <!-- Hero head: will stick at the top -->
        <div class="hero-head">
            <header class="navbar">
                <div class="container">
                    <div class="navbar-brand">
                        <a href=<%=rou.home %> class="navbar-item">
                            <img src="https://bulma.io/images/bulma-type-white.png" alt="Logo">
                        </a>
                        <span class="navbar-burger has-text-white" data-target="navbarMenuHeroC">
                            <span></span>
                            <span></span>
                            <span></span>
                        </span>
                    </div>
                    <div id="navbarMenuHeroC" class="navbar-menu">
                        <div class="navbar-end">
                            <a href=<%=rou.home %> class="navbar-item is-active">
                                Home
                            </a>
                            <span class="navbar-item">
                                <a href=<%=rou.home %> class="button is-info is-light">
                                    <span><%= proverb %> </span>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            </header>
        </div>

        <!-- Hero content: will be in the middle -->
        <div class="hero-body">
            <div class="container has-text-centered">

                <!--  -->
                <div class="tile is-ancestor">

                    <div class="tile is-vertical is-12">
                        <div class="tile">
                            <div class="tile is-parent is-vertical is-4">
                                <article class="tile is-child box">
                                    <b>1. Click To Upload... button</b>
                                    <!-- Put any content you want -->
                                </article>
                                <article class="tile is-child box">
                                    <b>2. Choses file</b>
                                    <!-- Put any content you want -->
                                </article>
                                <article class="tile is-child box">
                                    <b>3. Click [Have Fun!] button</b>
                                    <!-- Put any content you want -->
                                </article>
                            </div>
                            <div class="tile is-parent is-4-mobile is-8">
                                <article class="tile is-child box has-background-info-dark">
                                    <!-- Put any content you want -->

                                    <div class="file is-centered is-large is-boxed is-info has-name">
                                        <label class="file-label">
                                            <form action="/upload" method="post" enctype="multipart/form-data">
                                                <input class="file-input" type="file" name="upload-img">
                                                <span class="file-cta">
                                                    <span class="file-icon">
                                                        <i class="fas fa-upload"></i>
                                                    </span>
                                                    Click To Upload...
                                                </span>
                                                </span>
                                                <button type="submit" class="file-name has-background-light">
                                                    Have Fun!
                                                </button>
                                            </form>
                                        </label>
                                    </div>

                                    <!-- Put any content you want -->
                                </article>

                            </div>
                        </div>
                    </div>

                </div>
                <!--  -->

            </div>
        </div>

        <!-- Hero footer: will stick at the bottom -->
        <div class="hero-foot">
            <nav class="level is-mobile">
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Today</p>
                        <p class="title">
                            <%= data.today %>
                        </p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">All</p>
                        <p class="title">
                            <%= data.all %>
                        </p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Users</p>
                        <p class="title">
                            <%= data.user %>
                        </p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Guests</p>
                        <p class="title">
                            <%= data.guests %>
                        </p>
                    </div>
                </div>
            </nav>
            <br>
        </div>
    </section>

    <!-- scripts -->
   
</body>

</html>